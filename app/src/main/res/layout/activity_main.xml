<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/r1_et_tv_id">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/et_screen1_id"
            android:textSize="30dp"
            android:textColor="@color/colorBlack"
            android:background="@color/colorWhite"
            android:textAlignment="textEnd"
            android:gravity="end" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/tv_screen2_id"
            android:textSize="30dp"
            android:layout_below="@id/et_screen1_id"
            android:textColor="@color/colorBlack"
            android:background="@color/colorWhite"
            android:textAlignment="textEnd"
            android:gravity="end" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/r1_et_tv_id">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/ll_buttons1_id">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_division_id"
                android:text="/"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_multiplication_id"
                android:text="*"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_delete_id"
                android:text="del"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"
                android:paddingLeft="50dp"
                android:paddingRight="90dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/ll_buttons2_id"
            android:orientation="horizontal"
            android:layout_below="@id/ll_buttons1_id">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_seven_id"
                android:text="7"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_eight_id"
                android:text="8"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_nine_id"
                android:text="9"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_minus_id"
                android:text="-"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/ll_buttons3_id"
            android:layout_below="@id/ll_buttons2_id">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_four_id"
                android:text="4"
                android:textStyle="bold"
                android:textSize="20dp"
                 />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_five_id"
                android:text="5"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_six_id"
                android:text="6"
                android:textStyle="bold"
                android:textSize="20dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_plus_id"
                android:text="+"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_buttons4_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/ll_buttons3_id"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_one_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"/>

            <Button
                android:id="@+id/bt_two_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_three_id"
                android:text="3"
                android:textStyle="bold"
                android:textSize="20dp"

                android:textColor="@color/colorBlack"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_decimal_id"
                android:text="."
                android:textStyle="bold"
                android:textSize="20dp"
                android:paddingLeft="40dp"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:id="@+id/ll_buttons5_id"
            android:layout_below="@id/ll_buttons4_id">

            <Button
                android:id="@+id/bt_zero_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingRight="50dp"
                android:paddingLeft="70dp"
                android:textColor="@color/colorBlack"/>

            <Button
                android:id="@+id/bt_equal_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingRight="100dp"
                android:paddingLeft="109dp"/>

        </LinearLayout>
















</RelativeLayout>




</RelativeLayout>